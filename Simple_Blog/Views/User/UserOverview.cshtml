@{
    ViewData["Title"] = "Users";
}
@model List<User>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>User Overview</h2>
        </div>
        <div class="col text-end">
            <a asp-controller="User" asp-action="Register" class="btn btn-primary">Create New User</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">

            <table class="table table-hover text-light">

                <thead>
                    <tr class="text-light">
                        <th>Username</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody text-light>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.Password</td>

                            <td>
                                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger" 
                                   onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
