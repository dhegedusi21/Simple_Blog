@{
    ViewData["Title"] = "Blog";
}
@model List<Blog_post>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>Blog Posts</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">Create New Post</a>
        </div>
    </div>

    @foreach (var post in Model)
    {
        <div class="card mb-4">
            <div class="card-body">
                <h3>@post.Title</h3>
                <p class="text-muted">By @post.User.Username on @post.CreatedAt.ToShortDateString()</p>
                <p>@post.Content</p>
                <div>
                    <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
